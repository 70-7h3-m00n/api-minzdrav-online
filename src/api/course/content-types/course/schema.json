{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "typeCourse": {
      "type": "enumeration",
      "enum": [
        "Медицина",
        "Психология",
        "Диетология"
      ],
      "required": true
    },
    "color": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "durationTraining": {
      "type": "integer",
      "required": true
    },
    "categories": {
      "type": "component",
      "repeatable": true,
      "component": "shared.list-text",
      "required": true
    },
    "programs": {
      "type": "component",
      "repeatable": true,
      "required": true,
      "component": "shared.list-text"
    },
    "typeTraining": {
      "type": "component",
      "repeatable": true,
      "required": true,
      "component": "shared.list-text"
    },
    "subInfoContent": {
      "type": "component",
      "repeatable": true,
      "component": "shared.image-list"
    },
    "subInfoText": {
      "type": "component",
      "repeatable": true,
      "component": "shared.list-text"
    }
  }
}
